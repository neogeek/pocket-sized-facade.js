{
  "name": "pocket-sized-facade.js",
  "description": "A functional, pocket sized version of Facade.js",
  "version": "2.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "28.1.6",
    "@types/jest-image-snapshot": "5.1.0",
    "canvas": "2.9.3",
    "jest": "28.1.3",
    "jest-image-snapshot": "5.1.0",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.7",
    "ts-jest-resolver": "2.0.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "scripts": {
    "build": "rimraf dist/ && tsc",
    "test": "jest",
    "test:update": "jest --updateSnapshot"
  },
  "jest": {
    "collectCoverage": true,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest/legacy"
    },
    "resolver": "ts-jest-resolver",
    "testRegex": ".*.test.ts$"
  },
  "keywords": [
    "canvas"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "homepage": "https://github.com/neogeek/pocket-sized-facade.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/neogeek/pocket-sized-facade.js.git"
  }
}
